#!/bin/bash

set -e
set -u

PIDFILE=/var/vcap/sys/run/directorweb/nginx.pid
LOGDIR=/var/vcap/sys/log/directorweb

mkdir -p $LOGDIR
chown vcap:vcap $LOGDIR

exec >> $LOGDIR/nginx-control.log
exec 2>&1

mkdir -p $( dirname $PIDFILE )

mkdir -p $TMPDIR/nginxproxy
chown vcap:vcap $TMPDIR/nginxproxy

case $1 in

  start)
    /sbin/start-stop-daemon \
      --pidfile $PIDFILE \
      --exec /bin/bash \
      --start \
      -- -c "/var/vcap/packages/directorweb-nginx/sbin/nginx \
        -c /var/vcap/jobs/directorweb/etc/nginx.conf \
        >> $LOGDIR/nginx-stdout.log \
        2>> $LOGDIR/nginx-stderr.log \
      "

    ;;

  stop)
    /sbin/start-stop-daemon \
      --pidfile $PIDFILE \
      --signal QUIT \
      --oknodo \
      --stop \
      --retry 15

    ;;

  *)
    echo "Usage: control {start|stop}" >&2

    exit 1

    ;;

esac

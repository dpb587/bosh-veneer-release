user vcap vcap;

worker_processes auto;
worker_rlimit_nofile 8192;

error_log /var/vcap/sys/log/directorweb/nginx-error.log;
pid /var/vcap/sys/run/directorweb/nginx.pid;

daemon on;

events {
    worker_connections 1024;
}

http {
    include /var/vcap/packages/directorweb-nginx/conf/mime.types;

    server_tokens off;
    client_max_body_size 16m;

    default_type application/octet-stream;

    log_format main '$remote_addr $remote_user [$time_iso8601] "$host" "$request" $request_length $status $body_bytes_sent "$http_referer" "$http_user_agent" "$sent_http_location" $request_time "$upstream_addr" "$upstream_status" "$upstream_response_time"';
    access_log /var/vcap/sys/log/directorweb/nginx-access.log main;

    root /var/vcap/packages/directorweb-webapp/web;

    gzip on;
    gzip_comp_level 2;
    gzip_disable "MSIE [1-6]\.(?!.*SV1)";
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types application/json text/css text/javascript text/plain text/xml image/svg+xml application/vnd.ms-fontobject application/x-font-ttf font/opentype;

    proxy_buffer_size 128k;
    proxy_buffers 4 256k;
    proxy_busy_buffers_size 256k;
    proxy_connect_timeout 8s;
    proxy_read_timeout 300s;
    proxy_send_timeout 32s;

    proxy_temp_path /var/vcap/data/directorweb/nginx-proxy 1 2;

    server {
        listen <%= p('directorweb.nginx.http_port') %> default_server;

        return 301 https://$host$request_uri;
    }

    server {
        listen <%= p('directorweb.nginx.https_port') %> default_server ssl spdy;

        ssl_certificate /var/vcap/jobs/directorweb/etc/https.crt;
        ssl_certificate_key /var/vcap/jobs/directorweb/etc/https.key;

        location / {
            try_files $uri @app;
        }

        location @app {
            rewrite ^(.*)$ /app.php/$1 last;
        }

        location ~ /cloque/repository.git(/.*) {
            fastcgi_pass  localhost:9003;
            fastcgi_param SCRIPT_FILENAME /var/vcap/packages/directorweb-git/libexec/git-core/git-http-backend;
            fastcgi_param PATH_INFO $1;
            fastcgi_param QUERY_STRING $query_string;
            fastcgi_param CONTENT_TYPE $content_type;
            fastcgi_param REQUEST_METHOD $request_method;
            fastcgi_param REMOTE_ADDR $remote_addr;
            fastcgi_param REMOTE_USER $remote_user;
            fastcgi_param REMOTE_USER "somebody";

            fastcgi_param GIT_HTTP_EXPORT_ALL "";
            fastcgi_param GIT_PROJECT_ROOT    /var/vcap/store/directorweb/repository/git-root;
        }

        location /app.php {
            fastcgi_buffering off;

            fastcgi_buffer_size 128k;
            fastcgi_buffers 4 256k;
            fastcgi_busy_buffers_size 256k;

            fastcgi_split_path_info ^(/app.php)(/.*)$;

            fastcgi_param QUERY_STRING $query_string;
            fastcgi_param REQUEST_METHOD $request_method;
            fastcgi_param CONTENT_TYPE $content_type;
            fastcgi_param CONTENT_LENGTH $content_length;

            fastcgi_param SCRIPT_FILENAME /var/vcap/packages/directorweb-webapp/web/app.php;
            fastcgi_param SCRIPT_NAME index.php;
            fastcgi_param REQUEST_URI $request_uri;
            fastcgi_param DOCUMENT_URI $document_uri;
            fastcgi_param DOCUMENT_ROOT /var/vcap/packages/directorweb-webapp/web;
            fastcgi_param SERVER_PROTOCOL $server_protocol;

            fastcgi_param GATEWAY_INTERFACE CGI/1.1;
            fastcgi_param SERVER_SOFTWARE nginx/$nginx_version;

            fastcgi_param HTTPS $https;
            fastcgi_param REMOTE_ADDR $remote_addr;
            fastcgi_param REMOTE_PORT $remote_port;
            fastcgi_param SERVER_ADDR $server_addr;
            fastcgi_param SERVER_PORT $server_port;
            fastcgi_param SERVER_NAME $server_name;

            fastcgi_param REDIRECT_STATUS 200;

            fastcgi_send_timeout 15s;
            fastcgi_read_timeout 30s;

            fastcgi_pass 127.0.0.1:9001;

            internal;
        }
    }
}

#!/bin/bash

exec 2>&1

set -e
set -u

export HOME=$PWD

tar -xzf directorweb-nginx-blobs/pcre/pcre.tar.gz
tar -xzf directorweb-nginx-blobs/zlib/zlib.tar.gz

( cd directorweb-nginx-blobs/nginx

  tar -xzf nginx.tar.gz
  cd nginx-*

  ./configure \
    --prefix=${BOSH_INSTALL_TARGET} \
    --with-pcre=../../../pcre-* \
    --with-zlib=../../../zlib-*

  make
  make install
)

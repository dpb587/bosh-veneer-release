{% extends _layout %}

{% block def_title 'Cloud Properties' %}

{% block frag_content %}
  {% if 0 < properties|length %}
    <dl class="dl-horizontal">
      {% if properties.type is defined %}
        <dt>Type</dt>
        <dd>{{ properties.type}}</dd>
      {% endif %}

      {% if properties.encrypted is defined %}
        <dt>Encrypted</dt>
        <dd>{{ properties.encrypted ? 'Yes' : 'No' }}</dd>
      {% endif %}
    </dl>
  {% else %}
    <p class="text-muted">No properties configured.</p>
  {% endif %}
{% endblock %}

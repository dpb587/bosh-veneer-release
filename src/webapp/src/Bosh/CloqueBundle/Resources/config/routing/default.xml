<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bosh_cloque_summary" path="/cloque/summary.{_format}">
        <default key="_controller">Bosh\CloqueBundle\Controller\IndexController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <!-- deployment -->

    <route id="bosh_cloque_deployment_changelogALL_index" path="/cloque/deployment/{deployment}/changelog/:all/index.{_format}">
        <default key="_controller">Bosh\CloqueBundle\Controller\DeploymentChangelogALLController::indexAction</default>
        <default key="_format">html</default>
        <default key="_bosh_web_object_context">bosh/deployment</default>
    </route>

</routes>

{% extends _layout %}

{% block navbar %}
    <ul class="nav navbar-nav">
        <li{% if 'builtin' == block('def_topic') %} class="active"{% endif %}><a href="{{ path('bosh_core_deploymentALL_index') }}"><span class="glyphicon glyphicon-th"></span> deployments</a></li>
    </ul>
{% endblock %}

{% block def_topic 'deployment' %}

{% block def_title 'Deployments' %}

{% block frag_content %}
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Deployment</th>
            </tr>
        </thead>
        <tbody>
            {% for result in data.results %}
                <tr>
                    <td><a href="{{ path('bosh_core_deployment_summary', { 'deployment' : result.name }) }}">{{ result.name }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

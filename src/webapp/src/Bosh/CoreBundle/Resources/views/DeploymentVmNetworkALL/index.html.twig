{% extends 'BoshCoreBundle:Deployment:layout.html.twig' %}

{% block def_title 'Network' %}

{% block frag_content %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Name</th>
        <th>IP</th>
        <th>Default</th>
      </tr>
    </thead>
    <tbody>
      {% for result in data.results %}
        <tr>
          <td><a href="{{ path('bosh_core_deployment_vm_network_summary', { 'deployment' : context.deployment.name, 'agent' : context.vm.agentId, 'network' : result.name }) }}">{{ result.name }}</a></td>
          <td>{{ result.ip }}</td>
          <td>
            {% if result.default is defined %}
              {{ result.default|join(', ') }}
            {% else %}
              <span class="text-muted">&mdash;</span>
            {% endif %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

{% extends 'BoshCoreBundle:Release:layout.html.twig' %}

{% block def_title 'Releases' %}

{% block primary_nav %}
    <a href="{{ path('bosh_core_releaseALL_index') }}"><span class="glyphicon glyphicon-tree-deciduous"></span> releases</a>
{% endblock %}

{% block frag_content %}
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Release</th>
      </tr>
    </thead>
    <tbody>
      {% for result in results %}
        <tr>
          <td><a href="{{ path('bosh_core_release_summary', { 'release' : result.name }) }}">{{ result.name }}</a></td>
        </tr>
      {% endfor %}
    </tbody>
  </table>
{% endblock %}

{% block frag_sidebar %}
  <ul class="list-unstyled">
    <li><a href="https://bosh.io/releases"><small class="text-muted" style="margin-right:3px;"><span class="glyphicon glyphicon-info-sign"></span></small>bosh.io/releases</a></li>
  </ul>
{% endblock %}

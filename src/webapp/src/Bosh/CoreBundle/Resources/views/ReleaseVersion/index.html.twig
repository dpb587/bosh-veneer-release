{% extends 'BoshCoreBundle:Release:layout.html.twig' %}

{% block def_title context.release.name ~ '/' ~ context.version.version %}

{% block frag_content %}  
  {{ render(links.templates|bosh_web_appendqs({ '_frag' : 'content' })) }}
  {{ render(links.packages|bosh_web_appendqs({ '_frag' : 'content' })) }}
  {{ render(links.deployments|bosh_web_appendqs({ '_frag' : 'content' })) }}
{% endblock %}

{% block frag_sidebar %}
  <dl>
    <dt>Commit Hash</dt>
    <dd>{{ data.version.commitHash }}</dd>
    
    <dt>Uncommitted Changes</dt>
    <dd>{{ data.version.uncommittedChanges ? 'Yes' : 'No' }}</dd>
  </dl>
{% endblock %}

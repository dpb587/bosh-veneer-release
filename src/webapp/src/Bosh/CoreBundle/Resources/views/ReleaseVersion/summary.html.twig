{% extends _layout %}

{% block def_title _bosh_core_context.release.name ~ '/' ~ _bosh_core_context.version.version %}

{% block frag_content %}  
  {{ render(endpoints.templates|bosh_web_appendqs({ '_frag' : 'content' })) }}
  {{ render(endpoints.packages|bosh_web_appendqs({ '_frag' : 'content' })) }}
  {{ render(endpoints.deployments|bosh_web_appendqs({ '_frag' : 'content' })) }}
{% endblock %}

{% block frag_sidebar %}
  <dl>
    <dt>Commit Hash</dt>
    <dd>{{ data.commitHash }}</dd>
    
    <dt>Uncommitted Changes</dt>
    <dd>{{ data.uncommittedChanges ? 'Yes' : 'No' }}</dd>
  </dl>

  <ul class="list-unstyled">
    <li><a href="{{ endpoints.properties }}"><small class="text-muted" style="margin-right:3px;"><span class="glyphicon glyphicon-pencil"></span></small>Properties</a></li>
  </ul>
{% endblock %}

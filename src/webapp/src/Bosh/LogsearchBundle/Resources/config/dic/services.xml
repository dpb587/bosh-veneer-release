<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="bosh_logsearch.elasticsearch.host">localhost</parameter>
        <parameter key="bosh_logsearch.elasticsearch.port">9200</parameter>
        <parameter key="bosh_logsearch.elasticsearch_index">logstash-[Y.m.d]</parameter>
        <parameter key="bosh_logsearch.kibana_url">http://%bosh_logsearch.elasticsearch.host%:%bosh_logsearch.elasticsearch.port%/_plugin/kibana/index.html</parameter>
    </parameters>

    <services>
        <service id="bosh_logsearch.elasticsearch" class="Elastica\Client">
            <argument type="collection">
                <argument key="host">%bosh_logsearch.elasticsearch.host%</argument>
                <argument key="port">%bosh_logsearch.elasticsearch.port%</argument>
            </argument>
        </service>

        <service id="bosh_logsearch.elasticsearch_helper" class="Bosh\LogsearchBundle\Service\ElasticsearchHelper">
            <argument type="service" id="bosh_logsearch.elasticsearch" />
            <argument>%bosh_logsearch.elasticsearch_index%</argument>
        </service>

        <service id="bosh_logsearch.plugin.default" class="Bosh\LogsearchBundle\Service\Plugin\DefaultPlugin">
            <argument type="service" id="bosh_logsearch.elasticsearch" />
            <argument>%bosh_logsearch.kibana_url%</argument>
            <argument>%bosh_core.director_name%</argument>

            <tag name="bosh_core.plugin" context="bosh/deployment" />
            <tag name="bosh_core.plugin" context="bosh/deployment:all" />
            <tag name="bosh_core.plugin" context="bosh/deployment/property:all" />
            <tag name="bosh_core.plugin" context="bosh/deployment/property" />
            <tag name="bosh_core.plugin" context="bosh/deployment/instance" />
            <tag name="bosh_core.plugin" context="bosh/deployment/instance:all" />
            <tag name="bosh_core.plugin" context="bosh/deployment/instance/persistent_disk" />
            <tag name="bosh_core.plugin" context="bosh/deployment/instance/persistent_disk:all" />
            <tag name="bosh_core.plugin" context="bosh/deployment/vm" />
            <tag name="bosh_core.plugin" context="bosh/deployment/vm:all" />
            <tag name="bosh_core.plugin" context="bosh/deployment/vm/network" />
            <tag name="bosh_core.plugin" context="bosh/deployment/vm/network:all" />
            <tag name="bosh_core.plugin" context="bosh/task" />
            <tag name="bosh_core.plugin" context="bosh/task:all" />
            <tag name="bosh_core.plugin" context="bosh/release" />
            <tag name="bosh_core.plugin" context="bosh/release:all" />
            <tag name="bosh_core.plugin" context="bosh/release/package" />
            <tag name="bosh_core.plugin" context="bosh/release/package:all" />
            <tag name="bosh_core.plugin" context="bosh/release/template" />
            <tag name="bosh_core.plugin" context="bosh/release/template:all" />
            <tag name="bosh_core.plugin" context="bosh/release/version" />
            <tag name="bosh_core.plugin" context="bosh/release/version:all" />
            <tag name="bosh_core.plugin" context="bosh/stemcell" />
            <tag name="bosh_core.plugin" context="bosh/stemcell:all" />
        </service>
    </services>
</container>

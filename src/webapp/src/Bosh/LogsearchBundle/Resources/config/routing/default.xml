<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="bosh_logsearch_summary" path="/logsearch/summary.{_format}">
        <default key="_controller">Bosh\LogsearchBundle\Controller\IndexController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <!-- deployment -->

    <route id="bosh_logsearch_deployment_hoststats" path="/logsearch/deployment/{deployment}/hoststats.{_format}">
        <default key="_controller">Bosh\LogsearchBundle\Controller\DeploymentController::hoststatsAction</default>
        <default key="_format">html</default>
        <default key="_bosh_web_object_context">bosh/deployment</default>
    </route>

    <route id="bosh_logsearch_deployment_vm_hoststats" path="/logsearch/deployment/{deployment}/vm/{agent}/hoststats.{_format}">
        <default key="_controller">Bosh\LogsearchBundle\Controller\DeploymentVmController::hoststatsAction</default>
        <default key="_format">html</default>
        <default key="_bosh_web_object_context">bosh/deployment/vm</default>
    </route>

    <route id="bosh_logsearch_deployment_vm_network_hoststats" path="/logsearch/deployment/{deployment}/vm/{agent}/network/{network}/hoststats.{_format}">
        <default key="_controller">Bosh\LogsearchBundle\Controller\DeploymentVmNetworkController::hoststatsAction</default>
        <default key="_format">html</default>
        <default key="_bosh_web_object_context">bosh/deployment/vm/network</default>
    </route>

</routes>

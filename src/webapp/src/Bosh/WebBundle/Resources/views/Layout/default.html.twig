<!DOCTYPE html>
<html>
  <head>
    <title>{% block html_title %}{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link href="{{ asset('css/bootstrap.css') }}" rel="stylesheet" media="screen">

    <!-- HTML5 Shim and Respond.js add IE8 support of HTML5 elements and media queries -->
    {% include 'BraincraftedBootstrapBundle::ie8-support.html.twig' %}

    {% stylesheets '@BoshWebBundle/Resources/private/css/custom.css' %}
        <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

    {% block stylesheets %}{% endblock %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <script>var _postload=[]</script>
  </head>

  <body>
    {% block html_body %}
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <a class="navbar-brand" href="{{ path('bosh_core_summary') }}">{{ bosh_core_director_name }}</a>
          </div>
        <ul class="nav navbar-nav navbar-right">
          <li><a href="{{ path('bosh_web_summary') }}"><span class="glyphicon glyphicon-road" aria-hidden="true"></span></a></li>
        </ul>
          <div id="navbar" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
              <li{% if 'builtin' == block('primary_link') %} class="active"{% endif %}>{{ block('primary_nav') }}</li>
              {% for name, link in _user_links_primary %}
                <li{% if block('primary_link') == name %} class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
              {% endfor %}
            </ul>
          </div>
        </div>
      </nav>

      <div class="container">
            <div class="row">
                <div class="page-header">
                    <h1>{{ block('def_title') }}</h1>
                </div>
            </div>

        <div class="row">

          <div class="col-sm-3">
            {% block frag_sidebar %}{% endblock %}
          </div>

          <div class="col-sm-9">
            {% block frag_content %}{% endblock %}
          </div>

        </div>

      </div>
    {% endblock %}

    <script src="{{ asset('js/jquery.js') }}"></script>
    <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% javascripts '@highcharts' %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    {% if block('javascripts') %}<script>_postload.push(function () { {{ block('javascripts') }} });</script>{% endif %}
    <script>_postload.forEach(function (a){a.apply(window)})</script>
  </body>
</html>

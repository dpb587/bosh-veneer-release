{% extends _layout %}

{% block def_title data.size %}

{% block frag_content %}  
  {{ render(_links.widget.cpi.url|veneer_web_appendqs({ '_frag' : 'content' })) }}
{% endblock %}

{% block frag_sidebar %}
  <dl>
    <dt>Size</dt>
    <dd>{{ data.size }} MB</dd>

    <dt>Active</dt>
    <dd>{{ data.active ? 'Yes' : 'No' }}</dd>

    <dt>CID</dt>
    <dd>{{ data.diskCid }}</dd>
  </dl>

  {% include 'VeneerWebBundle:Common:referencelinks.html.twig' with { '_links' : _links, 'divider' : true } only %}
{% endblock %}

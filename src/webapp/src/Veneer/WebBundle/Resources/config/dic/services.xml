<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="veneer_web.event_listener.json_response" class="Veneer\WebBundle\EventListener\JsonResponseListener">
            <argument>%kernel.debug%</argument>

            <tag name="kernel.event_listener" event="kernel.response" method="onKernelResponse" />
        </service>

        <service id="veneer_web.breadcrumbs" class="Veneer\WebBundle\Service\Breadcrumbs" scope="prototype">
            <argument type="service" id="router" />

            <call method="add">
                <argument>bosh-veneer</argument>
                <argument type="collection">
                    <argument key="veneer_web_summary" type="collection"></argument>
                </argument>
                <argument type="collection">
                    <argument key="glyphicon">home</argument>
                </argument>
            </call>
        </service>

        <service id="veneer_web.encryption" class="Veneer\Component\Security\EncryptionService">
            <argument type="collection">
                <argument key="salt">%secret%</argument>
            </argument>
        </service>
    </services>
</container>

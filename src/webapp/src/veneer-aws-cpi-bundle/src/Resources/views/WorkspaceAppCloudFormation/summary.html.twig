{% extends 'VeneerAwsCpiBundle:WorkspaceAppCloudFormation:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Resources</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_awscpi_workspace_app_cloudformation_edit', { 'path' : path, 'resource' : '[]' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if template.Resources|default %}
            <tbody>
                {% for resource_name, resource in template.Resources|sort %}
                    <tr>
                        <td>
                            <strong>{{ resource_name }}</strong><br />
                            <small>{{ resource.Type|replace({ 'AWS::' : '' }) }}</small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_awscpi_workspace_app_cloudformation_edit', { 'path' : path, 'resource' : resource_name }) }}" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No resources configured &mdash; <a href="{{ path('veneer_awscpi_workspace_app_cloudformation_edit', { 'path' : path, 'resource' : '[]' }) }}">add one&hellip;</a>
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

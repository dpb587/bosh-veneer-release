{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "additionalProperties": false,
  "title": "Virtual IP",
  "description": "http://bosh.io/docs/networks.html#vip",
  "properties": {
    "cloud_properties": {
      "$ref": "https://dpb587.github.io/bosh-json-schema/default/cpi/network.json#"
    },
    "name": {
      "description": "Name used to reference this network configuration.",
      "type": "string"
    },
    "type": {
      "description": "Value should be vip.",
      "enum": [
        "vip"
      ],
      "type": "string"
    }
  },
  "required": [
    "name",
    "type"
  ],
  "type": "object"
}

{% extends _layout %}

{% block def_title 'Instance Groups' %}

{% block frag_content %}
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Instance Group</th>
            </tr>
        </thead>
        <tbody>
            {% for result in results %}
                <tr>
                    <td><a href="{{ path('veneer_bosh_deployment_instancegroup_summary', { 'deployment' : _veneer_bosh_context.deployment.name, 'instance_group' : result.job }) }}">{{ result.job }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends _layout %}

{% block def_title 'Instances' %}

{% block frag_content %}
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Instance</th>
                <th>State</th>
            </tr>
        </thead>
        <tbody>
            {% for result in results %}
                <tr>
                    <td><a href="{{ path('veneer_bosh_deployment_instancegroup_index_summary', { 'deployment' : _veneer_bosh_context.deployment.name, 'job' : result.job, 'index' : result.index }) }}">{{ result.index }}</a></td>
                    <td>{{ result.state|capitalize }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% extends _layout %}

{% block def_title data.job ~ '/' ~ data.index %}

{% block frag_content %}  
    {% if _links.widget.loadstats is defined %}{{ render(_links.widget.loadstats.url|veneer_core_appendqs({ '_frag' : 'content' })) }}{% endif %}
    {% if _links.widget.memstats is defined %}{{ render(_links.widget.memstats.url|veneer_core_appendqs({ '_frag' : 'content' })) }}{% endif %}
    {% if _links.widget.diskstats is defined %}{{ render(_links.widget.diskstats.url|veneer_core_appendqs({ '_frag' : 'content' })) }}{% endif %}
    {{ render(_links.widget.persistentdiskALL.url|veneer_core_appendqs({ '_frag' : 'content' })) }}
    {{ render(_links.widget.networkALL.url|veneer_core_appendqs({ '_frag' : 'content' })) }}
{% endblock %}

{% block frag_sidebar %}
    <dl>
        <dt>CID</dt>
        <dd>{{ data.vmCid }}</dd>

        <dt>State</dt>
        <dd>{{ data.state|capitalize }}</dd>
    
        <dt>Resurrection Paused</dt>
        <dd>{{ data.resurrectionPaused ? 'Yes' : 'No' }}</dd>
    </dl>

    {% include 'VeneerCoreBundle:Common:referencelinks.html.twig' with { '_links' : _links, 'divider' : true } only %}
{% endblock %}

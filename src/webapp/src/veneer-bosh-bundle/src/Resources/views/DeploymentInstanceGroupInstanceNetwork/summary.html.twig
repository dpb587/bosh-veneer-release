{% extends _layout %}

{% block def_title data.name %}

{% block frag_content %}  
    {{ render(_links.widget.cpi.url|veneer_core_appendqs({ '_frag' : 'content' })) }}
    {% if _links.widget.hoststats.url is defined %}{{ render(_links.widget.hoststats.url|veneer_core_appendqs({ '_frag' : 'content' })) }}{% endif %}
{% endblock %}

{% block frag_sidebar %}
    <dl>
        {% if data.type is defined %}
            <dt>Type</dt>
            <dd>{{ data.type }}</dd>
        {% endif %}
    
        <dt>IP</dt>
        <dd>{{ data.ip }}</dd>
    
        {% if data.netmask is defined %}
            <dt>Netmask</dt>
            <dd>{{ data.netmask }}</dd>
        {% endif %}
    
        {% if data.gateway is defined %}
            <dt>Gateway</dt>
            <dd>{{ data.gateway }}</dd>
        {% endif %}
    
        {% if data.dns is defined %}
            <dt>DNS</dt>
            {% for v in data.dns %}
                <dd>{{ v }}</dd>
            {% endfor %}
        {% endif %}
    
        {% if data.default is defined %}
            <dt>Default</dt>
            {% for v in data.default %}
                <dd>{{ v }}</dd>
            {% endfor %}
        {% endif %}
    </dl>

    {% include 'VeneerCoreBundle:Common:referencelinks.html.twig' with { '_links' : _links, 'divider' : true } only %}
{% endblock %}

{% extends 'VeneerBoshEditorBundle:AppCloudConfig:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Disk Types</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_bosh_editor_app_cloudconfig_edit', { 'file' : _veneer_bosh_context.app.file, 'path' : '/disk_types/-' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if manifest.disk_types|default %}
            <tbody>
                {% for disk_type in manifest.disk_types %}
                    <tr>
                        <td>
                            <strong>{{ disk_type.name }}</strong><br />
                            <small>{{ disk_type.disk_size }} MB</small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_bosh_editor_app_cloudconfig_edit', { 'file' : _veneer_bosh_context.app.file, 'path' : '/disk_types/name=' ~ disk_type.name }) }}" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No disk types configured &mdash; <a href="{{ path('veneer_bosh_editor_app_cloudconfig_edit', { 'file' : _veneer_bosh_context.app.file, 'path' : '/disk_types/-' }) }}">add one&hellip;</a>
                        </p>
                        <p class="text-muted">
                            <span class="text-primary"><i class="fa fa-question-circle"></i></span>
                            Specifies the disk types a deployment uses. A deployment manifest can describe multiple disk
                            types and uses unique names to identify and reference them.
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

{% extends 'VeneerBoshEditorBundle:AppDeployment:layout.html.twig' %}

{% block sidenav_active section %}

{% block frag_content %}
    <h3>{{ title }}</h3>

    <form action="{{ def_nav[-1].url }}" method="post">
        {% if form.vars.block_prefixes|length > 2 %}
            {{ form_widget(form) }}
        {% else %}
            {{ form_rest(form) }}
        {% endif %}

        <div>
            <button class="btn btn-success" type="submit">Save Changes</button>
            &nbsp;
            <a class="btn btn-warning-outline btn-sm" href="{{ def_nav[-2].url }}">cancel</a>
        </div>
    </form>
{% endblock %}

{% extends 'VeneerBoshEditorBundle:AppDeployment:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Jobs</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : path ~ '/jobs/-' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if instance_group.jobs|default %}
            <tbody>
                {% for job in instance_group.jobs %}
                    <tr>
                        <td>
                            <strong>{{ job.name }}</strong><br />
                            <small>{{ job.release }}</small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : path ~ '/jobs/name=' ~ job.name }) }}" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_section', { 'section' : 'properties', 'file' : _veneer_bosh_context.app.file.path, 'path': path ~ '/jobs/name=' ~ job.name ~ '/properties' }) }}" title="Change Properties" type="button"><i class="fa fa-cogs fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No jobs configured &mdash; <a href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : '/instance_groups/-' }) }}">add one&hellip;</a>
                        </p>
                        <p class="text-muted">
                            <span class="text-primary"><i class="fa fa-question-circle"></i></span>
                            The Jobs block defines how BOSH associates jobs with the VMs started by the IaaS.
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

{% extends 'VeneerBoshEditorBundle:AppDeployment:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Releases</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : '/releases/-' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if manifest.releases|default %}
            <tbody>
                {% for release in manifest.releases %}
                    <tr>
                        <td>
                            <strong>{{ release.name }}</strong><br />
                            <small>
                                {% if 'latest' == release.version %}
                                    {{ release.version }}
                                {% else %}
                                    v{{ release.version }}
                                {% endif %}
                            </small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                {#<a class="btn btn-warning-outline btn-sm" type="button"><i class="fa fa-arrow-circle-o-up"></i> v21</a>#}
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : '/releases/name=' ~ release.name }) }}" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" href="{{ path('veneer_bosh_editor_app_deployment_remove', { 'file' : _veneer_bosh_context.app.file.path, 'path' : '/releases/name=' ~ release.name }) }}" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No releases configured &mdash; <a href="{{ path('veneer_bosh_editor_app_deployment_edit', { 'file' : _veneer_bosh_context.app.file.path, 'path' : '/releases/-' }) }}">add one&hellip;</a>
                        </p>
                        <p class="text-muted">
                            <span class="text-primary"><i class="fa fa-question-circle"></i></span>
                            The name and version of each release in the deployment.
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

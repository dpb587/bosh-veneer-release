{% extends 'VeneerBoshEditorBundle:WorkspaceAppCloudConfig:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Availability Zones</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_bosh_editor_workspace_app_cloudconfig_edit', { 'path' : path, 'property' : 'azs[]' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if manifest.azs|default %}
            <tbody>
                {% for az in manifest.azs %}
                    <tr>
                        <td>
                            <strong>{{ az.name }}</strong><br />
                            <small>{{ az.cpi|default('default') }}</small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-primary-outline btn-sm" href="{{ path('veneer_bosh_editor_workspace_app_cloudconfig_edit', { 'path' : path, 'property' : 'azs[' ~ az.name ~ ']' }) }}" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No availability zones configured &mdash; <a href="{{ path('veneer_bosh_editor_workspace_app_cloudconfig_edit', { 'path' : path, 'property' : 'azs[]' }) }}">add one&hellip;</a>
                        </p>
                        <p class="text-muted">
                            <span class="text-primary"><i class="fa fa-question-circle"></i></span>
                            Each sub-block listed in the Networks block specifies an availability zone configuration
                            that networks can reference.
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

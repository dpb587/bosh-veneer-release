{% extends 'VeneerCoreBundle:Index:summary.html.twig' %}

{% block frag_content %}
    <p>
        Welcome &mdash; you are not currently logged in. Please use your BOSH credentials to continue&hellip;
    </p>

    {% if exception %}
        <p class="text-danger">
            <strong>Error: {{ exception }}</strong>
        </p>
    {% endif %}
    
    <form action="{{ path('veneer_core_auth_via_basic') }}" method="post">
        <div class="form-group row{% if exception %} has-error{% endif %}">
            <div class="col-sm-2">
                <label class="form-control-label" for="exampleInputEmail1">Username</label>
            </div>
            <div class="col-sm-10">
                <input class="form-control" type="text" name="basic[username]">
            </div>
        </div>
        <div class="form-group row{% if exception %} has-error{% endif %}">
            <div class="col-sm-2">
                <label class="form-control-label" for="exampleInputPassword1">Password</label>
            </div>
            <div class="col-sm-10">
                <input class="form-control" type="password" name="basic[password]">
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn-primary" type="submit">Log in</button>
            </div>
        </div>
    </form>
{% endblock %}

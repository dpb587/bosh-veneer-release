<!doctype html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block html_title %}{% if block('def_title') %}{{ block('def_title') }} ~ {% endif %}{{ veneer_bosh_director_name }}{% endblock %}</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    {% stylesheets '@foundation_css' %}<link rel="stylesheet" href="{{ asset_url }}" />{% endstylesheets %}
    {% javascripts '@modernizr_js' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}

    {% block stylesheets %}{% endblock %}

    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />

    <script>var _postload=[]</script>
  </head>

  <body>
    {% block html_body %}
        <nav class="top-bar" data-topbar role="navigation">
          <ul class="title-area">
            <li class="name">
              <h1><a href="{{ path('veneer_core_summary') }}">veneer</a></h1>
            </li>
            <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
          </ul>

          <section class="top-bar-section">
            {#<ul class="right">
              <li class="active"><a href="#">Right Button Active</a></li>
              <li class="has-dropdown">
                <a href="#">Right Button Dropdown</a>
                <ul class="dropdown">
                  <li><a href="#">First link in dropdown</a></li>
                  <li class="active"><a href="#">Active link in dropdown</a></li>
                </ul>
              </li>
            </ul>#}

            <ul class="left">
              {% for bundle in veneer_bosh_plugin_factory.bundles if bundle.veneerRoute %}
                <li{% if bundle.veneerRoute == def_nav[1].route[0]|default %} class="active"{% endif %}><a class="text-muted" href="{{ path(bundle.veneerRoute) }}">{{ bundle.veneerName }}</a></li>
              {% endfor %}
            </ul>
          </section>
        </nav>

            <div class="row collapse">
                <div class="small-12 column">
                    <div style="border-bottom:#DEDEDE solid 1px;margin-bottom:12px;padding:10px 10px 9px;">
                        {% for nav in def_nav|default([])[2:] %}
                            {% if loop.first and loop.length > 1 %}
                                <a href="{{ nav.url }}" title="{{ nav.title }}" style="color:#999999;">&nbsp;<i class="fa fa-angle-double-right"></i>&nbsp;</a>
                            {% else %}
                                {% if loop.index0 > 1 %}
                                    <span style="color:#CFCFCF;">&nbsp;<i class="fa fa-angle-right"></i>&nbsp;</span>
                                {% endif %}
                                <a href="{{ nav.url }}"{% if loop.first or loop.last or 1 == loop.index0 %} style="color:inherit;"{% endif %}>{% if nav.options.glyphicon|default %}<i class="fa fa-{{ nav.options.glyphicon }}" aria-hidden="true"></i> {% endif %}{{ nav.title }}</a>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>

                    {#
            {% if 1 < _topics|length or (0 < _topics|length and _topics[block('primary_link')] is not defined) %}
              <div id="navbar" class="navbar-collapse collapse">
                <ul class="nav navbar-nav navbar-right">
                  {% for name, link in _topics %}
                    <li{% if block('primary_link') == name %} class="active"{% endif %}><a href="{{ link.url }}">{{ link.title }}</a></li>
                  {% endfor %}
                </ul>
              </div>
            {% endif %}#}
      </nav>

        <div class="row">
            {% block frag_container %}

                  <div class="small-12 medium-3 column">
                    {% block frag_sidebar %}{% endblock %}
                  </div>

                  <div class="small-12 medium-9 column">
                    {% block frag_content %}{% endblock %}
                  </div>

            {% endblock %}

        </div>

        <div class="text-center" style="border-top:#DEDEDE solid 1px;color:#999999;font-size:80%;margin-top:18px;padding:7px 0 6px;">
            <a href="https://github.com/dpb587/bosh-veneer-release" style="color:inherit;">bosh-veneer</a>
            &ndash;
            created byÂ <a href="http://dpb587.me/" style="color:inherit;">danny berger</a>
        </div>
    {% endblock %}

    {% javascripts '@jquery_js' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
    {% javascripts '@foundation_js' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}
    {% javascripts '@highcharts_js' %}<script src="{{ asset_url }}"></script>{% endjavascripts %}

    {% if block('javascripts') %}<script>_postload.push(function () { {{ block('javascripts') }} });</script>{% endif %}
    <script>_postload.forEach(function (a){a.apply(window)})</script>
  </body>
</html>

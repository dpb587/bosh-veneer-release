{% extends _layout %}

{% block def_title 'Hubs' %}

{% block frag_content %}
    <table class="table table-condensed">
        <thead>
            <tr>
                <th>Hub</th>
            </tr>
        </thead>
        <tbody>
            {% for result in results %}
                <tr>
                    <td><a href="{{ path('veneer_hub_hub_summary', { 'hub' : result.name }) }}">{{ result.title }}</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block frag_sidebar %}
    <p class="text-muted">
        External services can provide releases and stemcells to easily use in your own BOSH deployments.
    </p>

    {% include 'VeneerCoreBundle:Common:referencelinks.html.twig' with { '_links' : _links, 'divider' : true } only %}
{% endblock %}

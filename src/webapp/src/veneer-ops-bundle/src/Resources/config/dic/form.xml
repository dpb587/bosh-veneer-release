<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- @todo the cpi service needs to be defined elsewhere and automatically -->
        <service id="cpi" class="Object">
            <factory service="kernel" method="getBundle" />
            <argument>VeneerAwsCpiBundle</argument>
        </service>

        <service id="veneer_ops.form.type.deployment_property" class="Veneer\OpsBundle\Form\Type\DeploymentPropertyType">
            <tag name="form.type" alias="veneer_ops_deployment_property" />
        </service>

        <service id="veneer_ops.form.type.deployment_update" class="Veneer\OpsBundle\Form\Type\Deployment\UpdateType">
            <tag name="form.type" alias="veneer_ops_deployment_update" />
        </service>

        <service id="veneer_ops.form.type.deployment_release" class="Veneer\OpsBundle\Form\Type\DeploymentReleaseType">
            <argument type="service" id="doctrine.orm.bosh_entity_manager" />

            <tag name="form.type" alias="veneer_ops_deployment_release" />
        </service>

        <service id="veneer_ops.form.type.deployment_resourcepool_stemcell" class="Veneer\OpsBundle\Form\Type\DeploymentResourcePoolStemcellType">
            <argument type="service" id="doctrine.orm.bosh_entity_manager" />

            <tag name="form.type" alias="veneer_ops_deployment_resourcepool_stemcell" />
        </service>

        <service id="veneer_ops.form.type.deployment_network" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_dynamic" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkDynamicType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network_dynamic" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_manual" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkManualType">
            <tag name="form.type" alias="veneer_ops_deployment_network_manual" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_manual_subnet" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkManualSubnetType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network_manual_subnet" />
        </service>

        <service id="veneer_ops.form.type.deployment_diskpool_manifestselector" class="Veneer\OpsBundle\Form\Type\DeploymentDiskPoolManifestSelectorType">
            <tag name="form.type" alias="veneer_ops_deployment_diskpool_manifestselector" />
        </service>

        <service id="veneer_ops.form.type.deployment_resourcepool_manifestselector" class="Veneer\OpsBundle\Form\Type\DeploymentResourcePoolManifestSelectorType">
            <tag name="form.type" alias="veneer_ops_deployment_resourcepool_manifestselector" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_manifestselector" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkManifestSelectorType">
            <tag name="form.type" alias="veneer_ops_deployment_network_manifestselector" />
        </service>

        <service id="veneer_ops.form.type.deployment_job" class="Veneer\OpsBundle\Form\Type\DeploymentInstanceGroupType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_instancegroup" />
        </service>

        <service id="veneer_ops.form.type.deployment_job_network" class="Veneer\OpsBundle\Form\Type\DeploymentInstanceGroupNetworkType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_instancegroup_network" />
        </service>

        <service id="veneer_ops.form.type.deployment_job_templates" class="Veneer\OpsBundle\Form\Type\DeploymentInstanceGroupTemplatesType">
            <argument type="service" id="doctrine.orm.bosh_entity_manager" />

            <tag name="form.type" alias="veneer_ops_deployment_instancegroup_templates" />
        </service>

        <!-- cloud config -->

        <service id="veneer_ops.form.type.cloudconfig_availabilityzone" class="Veneer\OpsBundle\Form\Type\CloudConfig\AvailabilityZoneType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_availabilityzone" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_disktype" class="Veneer\OpsBundle\Form\Type\CloudConfig\DiskTypeType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_disktype" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_compilation" class="Veneer\OpsBundle\Form\Type\CloudConfig\CompilationType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_compilation" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_vmtype" class="Veneer\OpsBundle\Form\Type\CloudConfig\VmTypeType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_vmtype" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_network" class="Veneer\OpsBundle\Form\Type\CloudConfig\NetworkType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_network" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_network_dynamic" class="Veneer\OpsBundle\Form\Type\CloudConfig\NetworkDynamicType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_network_dynamic" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_network_manual" class="Veneer\OpsBundle\Form\Type\CloudConfig\NetworkManualType">
            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_network_manual" />
        </service>

        <service id="veneer_ops.form.type.cloudconfig_network_manual_subnet" class="Veneer\OpsBundle\Form\Type\CloudConfig\NetworkManualSubnetType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_editor_cloudconfig_network_manual_subnet" />
        </service>

        <service id="veneer_ops.form.type.raw" class="Veneer\OpsBundle\Form\Type\RawType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_raw" />
        </service>
    </services>
</container>

<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- @todo the cpi service needs to be defined elsewhere and automatically -->
        <service id="cpi" class="Object">
            <factory service="kernel" method="getBundle" />
            <argument>VeneerAwsCpiBundle</argument>
        </service>

        <service id="veneer_ops.form.type.deployment_compilation" class="Veneer\OpsBundle\Form\Type\DeploymentCompilationType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_compilation" />
        </service>

        <service id="veneer_ops.form.type.deployment_update" class="Veneer\OpsBundle\Form\Type\DeploymentUpdateType">
            <tag name="form.type" alias="veneer_ops_deployment_update" />
        </service>

        <service id="veneer_ops.form.type.deployment_release" class="Veneer\OpsBundle\Form\Type\DeploymentReleaseType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_release" />
        </service>

        <service id="veneer_ops.form.type.deployment_resourcepool" class="Veneer\OpsBundle\Form\Type\DeploymentResourcePoolType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_resourcepool" />
        </service>

        <service id="veneer_ops.form.type.deployment_resourcepool_stemcell" class="Veneer\OpsBundle\Form\Type\DeploymentResourcePoolStemcellType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_resourcepool_stemcell" />
        </service>

        <service id="veneer_ops.form.type.deployment_network" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_dynamic" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkDynamicType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network_dynamic" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_manual" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkManualType">
            <tag name="form.type" alias="veneer_ops_deployment_network_manual" />
        </service>

        <service id="veneer_ops.form.type.deployment_network_manual_subnet" class="Veneer\OpsBundle\Form\Type\DeploymentNetworkManualSubnetType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_network_manual_subnet" />
        </service>

        <service id="veneer_ops.form.type.deployment_diskpool" class="Veneer\OpsBundle\Form\Type\DeploymentDiskPoolType">
            <argument type="service" id="cpi" />

            <tag name="form.type" alias="veneer_ops_deployment_diskpool" />
        </service>
    </services>
</container>

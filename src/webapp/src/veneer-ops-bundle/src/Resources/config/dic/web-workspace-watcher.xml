<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="veneer_ops.workspace.watcher" class="Veneer\OpsBundle\Service\Workspace\Watcher">
            <argument type="service" id="veneer_core.workspace.repository" />
            <argument type="service" id="service_container" />

            <tag name="veneer_core.workspace.watcher" path="#/bosh\.yml$#" method="onDeploymentManifest" />
        </service>
    </services>
</container>

<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="veneer_ops_summary" path="/ops/summary.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\IndexController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_deploymenteditor_summary" path="/ops/workspace/deployment-editor/summary.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceDeploymentEditorController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_deploymenteditor_section" path="/ops/workspace/deployment-editor/{section}.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceDeploymentEditorController::sectionAction</default>
        <default key="_format">html</default>
        <requirement key="section">releases|networks|diskpools|resourcepools|jobs|properties</requirement>
    </route>

    <route id="veneer_ops_workspace_deploymenteditor_edit" path="/ops/workspace/deployment-editor/edit.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceDeploymentEditorController::editAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_deploymenteditor_remove" path="/ops/workspace/deployment-editor/remove.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceDeploymentEditorController::removeAction</default>
        <default key="_format">html</default>
    </route>
</routes>

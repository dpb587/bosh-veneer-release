<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="veneer_ops_deployment_job_restart" path="/ops/deployment/{deployment}/job/{job}/restart">
        <default key="_controller">Veneer\OpsBundle\Controller\DeploymentInstanceGroupController::restartAction</default>
        <default key="_veneer_core_context">bosh/deployment/job</default>
    </route>

    <route id="veneer_ops_deployment_job_recreate" path="/ops/deployment/{deployment}/job/{job}/recreate">
        <default key="_controller">Veneer\OpsBundle\Controller\DeploymentInstanceGroupController::recreateAction</default>
        <default key="_veneer_core_context">bosh/deployment/job</default>
    </route>

    <route id="veneer_ops_deployment_job_index_restart" path="/ops/deployment/{deployment}/job/{job}/index/{index}/restart">
        <default key="_controller">Veneer\OpsBundle\Controller\DeploymentInstanceGroupIndexController::restartAction</default>
        <default key="_veneer_core_context">bosh/deployment/job/index</default>
    </route>

    <route id="veneer_ops_deployment_job_index_recreate" path="/ops/deployment/{deployment}/job/{job}/index/{index}/recreate">
        <default key="_controller">Veneer\OpsBundle\Controller\DeploymentInstanceGroupIndexController::recreateAction</default>
        <default key="_veneer_core_context">bosh/deployment/job/index</default>
    </route>

    <!-- summary -->

    <route id="veneer_ops_summary" path="/ops/summary.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\IndexController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_app_deployment_summary" path="/ops/workspace/app/deployment/summary.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceAppDeploymentController::summaryAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_app_deployment_section" path="/ops/workspace/app/deployment/{section}.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceAppDeploymentController::sectionAction</default>
        <default key="_format">html</default>
        <requirement key="section">releases|networks|diskpools|resourcepools|jobs|properties</requirement>
    </route>

    <route id="veneer_ops_workspace_app_deployment_edit" path="/ops/workspace/app/deployment/edit.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceAppDeploymentController::editAction</default>
        <default key="_format">html</default>
    </route>

    <route id="veneer_ops_workspace_app_deployment_remove" path="/ops/workspace/app/deployment/remove.{_format}">
        <default key="_controller">Veneer\OpsBundle\Controller\WorkspaceAppDeploymentController::removeAction</default>
        <default key="_format">html</default>
    </route>
</routes>

{% extends 'VeneerOpsBundle:WorkspaceDeploymentEditor:layout.html.twig' %}

{% block frag_content %}
    <table class="table table-hover" width="100%">
        <thead>
            <tr>
                <th style="border-top:0;">
                    <h3 style="margin-bottom:0;">Releases</h3>
                </th>
                <th class="text-right" style="border-top:0;">
                    <a class="btn btn-success-outline btn-sm" href="{{ path('veneer_ops_workspace_deploymenteditor_edit', { 'path' : path, 'property' : 'releases[]' }) }}" title="Add" type="button"><i class="fa fa-plus fa-fw"></i></a>
                </th>
            </tr>
        </thead>
        {% if manifest.releases|default %}
            <tbody>
                {% for release in manifest.releases %}
                    <tr>
                        <td>
                            <strong>{{ release.name }}</strong><br />
                            <small>v{{ release.version }}</small>
                        </td>
                        <td class="text-right">
                            <div class="btn-group" role="group" aria-label="Actions">
                                <a class="btn btn-warning-outline btn-sm" type="button"><i class="fa fa-arrow-circle-o-up"></i> v21</a>
                                <a class="btn btn-primary-outline btn-sm" title="Change" type="button"><i class="fa fa-pencil fa-fw"></i></a>
                                <a class="btn btn-danger-outline btn-sm" title="Remove" type="button"><i class="fa fa-remove fa-fw"></i></a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        {% else %}
            <tfoot>
                <tr>
                    <td colspan="2">
                        <p>
                            No releases configured &mdash; <a href="{{ path('veneer_ops_workspace_deploymenteditor_edit', { 'path' : path, 'property' : 'releases[]' }) }}">add one&hellip;</a>
                        </p>
                        <p class="text-muted">
                            <span class="text-primary"><i class="fa fa-question-circle"></i></span>
                            The name and version of each release in the deployment.
                        </p>
                    </td>
                </tr>
            </tfoot>
        {% endif %}
    </table>
{% endblock %}

{% extends _layout %}

{% block def_title 'Sheaf Editor' %}

{% block frag_container %}
    {% if draft_profile.draft_started %}
        <div class="bg-primary" style="margin:-16px 0 16px;padding:7px 16px 8px 16px;">
            <div class="pull-right">

                &nbsp;
                <a class="btn btn-secondary" href="{{ path('veneer_core_workspace_repo_review_index', { 'ref' : draft_profile.ref_write }) }}">Review Changes</a>
            </div>
            <div style="padding:6px 0;">
                Some changes have not yet been applied.
                Last changed on {{ draft_profile.draft_last_date|date('M jS \\a\\t g:i a') }}
            </div>
        </div>
    {% endif %}
    {{ parent() }}
{% endblock %}

{% block frag_sidebar %}
    <ul class="nav">
        {{ _self.navlink(path('veneer_sheaf_app_dependencies', { 'path' : path }), 'Dependencies', 'truck', 'dependencies', sidenav_active) }}
        {% for component in installation.components if installation.installation.components[component.name]|default %}
            {{ _self.navlink(path('veneer_sheaf_app_deployment_summary', { 'deployment': component.name, 'path' : path }), component.title, 'sitemap', 'deployment:' ~ component.name, sidenav_active) }}
        {% endfor %}
    </ul>

    <hr />

    <ul class="list-unstyled">
        <li><small><a class="text-muted" href="{{ path('veneer_core_workspace_repo_blob_index', { 'ref' : draft_profile.ref_read, 'path' : path }) }}"><i class="fa fa-code fa-fw"></i> {{ path }}</a></small></li>
    </ul>
{% endblock %}

{% macro navlink(path, title, fontawesome, name, active) %}
    <li class="nav-item">
        {% if name == active %}
            <i class="fa fa-{{ fontawesome }} fa-fw"></i> {{ title }}
        {% else %}
            <a href="{{ path }}" class="nav-link"><i class="fa fa-{{ fontawesome }} fa-fw"></i> {{ title }}</a>
        {% endif %}
    </li>
{% endmacro %}
